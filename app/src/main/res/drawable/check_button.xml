<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    // 버튼 선택
    <item android:state_checked="true">
        <shape>
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            <gradient android:angle="270" android:endColor="@color/gradation" android:startColor="@color/gradation" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <stroke android:width="1dp" android:color="@color/gray"/>
        </shape>
    </item>

    // 버튼 선택 해제
    <item android:state_checked ="false">
        <shape>
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <stroke android:width="1dp" android:color="@color/gray"/>
        </shape>
    </item>
</selector>