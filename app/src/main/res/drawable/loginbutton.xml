<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    // 버튼 눌렸을 때
    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            <solid android:color="@color/white"></solid>
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <stroke android:width="1dp" android:color="@color/colorMe"/>
        </shape>
    </item>

    // 평소 버튼
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="2dp" android:left="8dp" android:right="8dp" android:top="2dp" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" />
            <stroke android:width="1dp" android:color="@color/colorMe"/>
        </shape>
    </item>
</selector>